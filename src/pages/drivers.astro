---
// src/pages/drivers.astro
import Layout from '../layouts/Layout.astro';
import drivers from '../data/drivers.json';
---

<Layout title="AFO Grid | Season 3 Drivers">
  <main class="max-w-7xl mx-auto px-4 py-20">
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6">
      <div>
        <h1 class="text-6xl font-black italic uppercase text-white leading-none">The Grid</h1>
        <p class="text-zinc-500 font-bold uppercase tracking-[0.2em] mt-4">Official AFO Season 3 Entry List</p>
      </div>
      <div class="text-right">
        <span class="text-white font-black text-4xl italic opacity-10 uppercase select-none">Drivers</span>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {drivers.map((driver) => (
        <a href={`/drivers/${driver.id}`} class="group bg-zinc-900/50 border border-zinc-800 rounded-2xl overflow-hidden hover:border-red-600 transition-all duration-300 backdrop-blur-sm">
          <div class="p-8">
            <div class="flex justify-between items-start mb-6">
               <div>
                 <span class="text-4xl font-black italic opacity-20 group-hover:opacity-100 transition-opacity text-white">#{driver.number}</span>
                 <h2 class="text-3xl font-black uppercase italic leading-tight text-white mt-2">
                  {driver.name}
                </h2>
                <p class="text-zinc-500 text-xs font-bold uppercase tracking-widest mt-1">{driver.team}</p>
               </div>
               <span class="text-3xl">{driver.flag}</span>
            </div>
            
            <div class="grid grid-cols-4 gap-2 mb-8 border-y border-zinc-800/50 py-4 text-center">
              <div>
                <span class="block text-lg font-black text-yellow-500">{driver.stats.titles}</span>
                <span class="text-[8px] text-zinc-500 uppercase font-bold tracking-tighter">Titles</span>
              </div>
              <div class="border-l border-zinc-800/50">
                <span class="block text-lg font-black text-white">{driver.stats.wins}</span>
                <span class="text-[8px] text-zinc-500 uppercase font-bold tracking-tighter">Wins</span>
              </div>
              <div class="border-l border-zinc-800/50">
                <span class="block text-lg font-black text-white">{driver.stats.podiums}</span>
                <span class="text-[8px] text-zinc-500 uppercase font-bold tracking-tighter">Podiums</span>
              </div>
              <div class="border-l border-zinc-800/50">
                <span class="block text-lg font-black text-red-600">{driver.stats.starts}</span>
                <span class="text-[8px] text-zinc-500 uppercase font-bold tracking-tighter">Starts</span>
              </div>
            </div>

            <p class="text-zinc-400 text-sm italic line-clamp-3 mb-8 leading-relaxed">
              {driver.bio}
            </p>

            <div class="relative aspect-video bg-zinc-950 rounded-xl border border-zinc-800/50 flex items-center justify-center overflow-hidden">
               <div class="absolute inset-0 bg-gradient-to-t from-zinc-950 to-transparent opacity-60"></div>
               <img 
                 src={driver.car} 
                 alt={`${driver.name} Livery`} 
                 class="w-full h-full object-cover opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-700" 
               />
               <span class="absolute bottom-4 right-4 text-[10px] font-black uppercase tracking-widest text-white/50 group-hover:text-white transition-colors">
                 View Profile â†’
               </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>