---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import RaceHero from '../components/RaceHero.astro';
---

<Layout title="AFO | Official Website">
	<main class="max-w-7xl mx-auto px-4 py-12">
		
		<RaceHero />

		<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
			
			<div class="lg:col-span-2 space-y-8">
				<div class="bg-zinc-900 aspect-video rounded-xl border border-zinc-800 flex items-center justify-center relative overflow-hidden">
					<p class="text-zinc-600 font-mono">Latest Stream Embed (Coming Soon)</p>
				</div>
			</div>

			<div class="space-y-6">
				<div class="bg-zinc-900 p-6 rounded-xl border border-zinc-800">
					<h3 class="font-black italic uppercase text-sm mb-4 border-b border-zinc-800 pb-2">Quick Standings</h3>
					<ul class="space-y-3 font-mono text-sm">
						<li class="flex justify-between border-b border-zinc-800/50 pb-1">
							<span>1. J. Wagenvoort</span> <span class="text-red-500 font-bold">96</span>
						</li>
						<li class="flex justify-between border-b border-zinc-800/50 pb-1">
							<span>2. A. Rimkunas</span> <span class="text-red-500 font-bold">87</span>
						</li>
						<li class="flex justify-between border-b border-zinc-800/50 pb-1">
							<span>3. P. Prentic</span> <span class="text-red-500 font-bold">69</span>
						</li>
						<li class="flex justify-between border-b border-zinc-800/50 pb-1">
							<span>4. R. Hawk</span> <span class="text-red-500 font-bold">59</span>
						</li>
						<li class="flex justify-between border-b border-zinc-800/50 pb-1">
							<span>5. N. Sparks</span> <span class="text-red-500 font-bold">57</span>
						</li>
					</ul>
					<a href="/standings" class="block text-center mt-4 text-[10px] text-zinc-500 hover:text-white uppercase font-bold tracking-widest">Full Standings â†’</a>
				</div>
			</div>

		</div>
	</main>
</Layout>