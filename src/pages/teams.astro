---
// src/pages/teams.astro
import Layout from '../layouts/Layout.astro';
import teams from '../data/teams.json';
---

<Layout title="AFO Teams | Season 3 Lineup">
  <main class="max-w-7xl mx-auto px-4 py-20">
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6">
      <div>
        <h1 class="text-6xl font-black italic uppercase text-white leading-none">The Teams</h1>
        <p class="text-zinc-500 font-bold uppercase tracking-[0.2em] mt-4">Official AFO Season 3 Entry List</p>
      </div>
      <div class="text-right">
        <span class="text-white font-black text-4xl italic opacity-10 uppercase select-none">Constructors</span>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {teams.map((team) => (
        <a href={`/teams/${team.id}`} class="group bg-zinc-900/50 border border-zinc-800 rounded-2xl overflow-hidden hover:border-white/20 transition-all duration-300 backdrop-blur-sm">
          <div class="h-1.5 w-full" style={`background-color: ${team.color}`}></div>
          
          <div class="p-8">
            <div class="flex justify-between items-start mb-6">
               <h2 class="text-3xl font-black uppercase italic leading-tight text-white group-hover:text-red-500 transition-colors">
                {team.name}
              </h2>
            </div>
            
            <div class="flex gap-6 mb-8 border-y border-zinc-800/50 py-4">
              <div class="text-center">
                <span class="block text-xl font-black text-yellow-500">{team.stats.titles}</span>
                <span class="text-[9px] text-zinc-500 uppercase font-bold tracking-widest">Titles</span>
              </div>
              <div class="text-center border-l border-zinc-800/50 pl-6">
                <span class="block text-xl font-black text-white">{team.stats.wins}</span>
                <span class="text-[9px] text-zinc-500 uppercase font-bold tracking-widest">Wins</span>
              </div>
              <div class="text-center border-l border-zinc-800/50 pl-6">
                <span class="block text-xl font-black text-white">{team.stats.podiums}</span>
                <span class="text-[9px] text-zinc-500 uppercase font-bold tracking-widest">Podiums</span>
              </div>
            </div>

            <p class="text-zinc-400 text-sm italic line-clamp-2 mb-8 leading-relaxed">
              {team.bio}
            </p>

            <div class="relative aspect-video bg-zinc-950 rounded-xl border border-zinc-800/50 flex items-center justify-center overflow-hidden">
               <div class="absolute inset-0 bg-gradient-to-t from-zinc-950 to-transparent opacity-60"></div>
               <img 
                 src={team.logo}
                 alt={`${team.name} Logo`} 
                 class="w-full h-full object-cover opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-700" 
               />
               <span class="absolute bottom-4 right-4 text-[10px] font-black uppercase tracking-widest text-white/50 group-hover:text-white transition-colors">
                 Enter Factory â†’
               </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>